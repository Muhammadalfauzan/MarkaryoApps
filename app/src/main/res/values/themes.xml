<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MakaryoApps" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/yellow</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MakaryoApps" parent="Base.Theme.MakaryoApps" />

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/white</item> <!-- Background color of the query text area -->
        <item name="backgroundTint">@color/white</item> <!-- Background color of the search bar -->
        <item name="iconTint">@color/grey_font</item> <!-- Tint color of the search icon -->
        <item name="android:textColor">@color/dark_grey</item> <!-- Color of the search text -->
        <item name="hintTextColor">@color/grey_font</item> <!-- Color of the hint text -->

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>